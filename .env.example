# GlanceWatch Configuration
# Copy this file to .env and customize as needed

# ===== Glances Connection =====
# Base URL for Glances API (default: http://localhost:61208)
GLANCES_BASE_URL=http://localhost:61208

# Timeout for Glances API requests in seconds (default: 5)
GLANCES_TIMEOUT=5

# ===== Server Settings =====
# Host to bind to (default: 0.0.0.0)
HOST=0.0.0.0

# Port to listen on (default: 8000)
PORT=8000

# ===== Monitoring Thresholds =====
# RAM usage threshold percentage (0-100, default: 80)
RAM_THRESHOLD=80.0

# CPU usage threshold percentage (0-100, default: 80)
CPU_THRESHOLD=80.0

# Disk usage threshold percentage (0-100, default: 85)
DISK_THRESHOLD=85.0

# ===== Disk Monitoring Configuration =====
# Comma-separated list of mount points to monitor, or "all" for all mounts
# Default: /
# Examples:
#   DISK_MOUNTS=/                    # Monitor only root filesystem
#   DISK_MOUNTS=/,/home,/data        # Monitor multiple specific mounts
#   DISK_MOUNTS=all                  # Monitor all mount points
DISK_MOUNTS=/

# Comma-separated list of filesystem types to exclude from monitoring
# Default: tmpfs,devtmpfs,overlay,squashfs
DISK_EXCLUDE_TYPES=tmpfs,devtmpfs,overlay,squashfs

# ===== Error Handling =====
# HTTP status code to return when metrics exceed thresholds
# Leave empty to always return 200 with ok=false in JSON
# Set to 503 or another code to return that status on failures
# Examples:
#   RETURN_HTTP_ON_FAILURE=          # Always return 200 (default)
#   RETURN_HTTP_ON_FAILURE=503       # Return 503 on failures
RETURN_HTTP_ON_FAILURE=

# ===== Logging =====
# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL, default: INFO)
LOG_LEVEL=INFO
